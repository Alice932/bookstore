%main.container
  = render 'books/partials/catalog'
  .mb-120
    .row#books
      = render partial: 'books/partials/book', collection: books, as: :book
    .text-center
      #next_link
        - if @pagy.next.present?
          =button_to t('books.index.view_more'), pagy_url_for(@pagy, @pagy.next), {class: "btn btn-primary"}
