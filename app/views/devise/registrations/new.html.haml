%main.container.general-main-wrap
  .text-center
    %h3.general-login-title= t('devise.registrations.new.registration')
    -# = link_to user_facebook_omniauth_authorize_path, class: 'general-login-icon' do
    %a.general-login-icon{href: "#"}
      %i.fa-brands.fa-facebook-square
    %p.general-login-text= t('devise.sessions.or')
  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }, html: {class: "general-form"}) do |f|
    - render "devise/registrations/registrations_errors", resource: resource
    .form-group.mb-30
      = f.label :email, class: "control-label input-label"
      = f.email_field :email, placeholder: t('devise.sessions.enter_email'), class: 'form-control has-error'
      = f.full_error :email, id: 'inputEmail', class: 'form_errors'
    .form-group.mb-30
      = f.label :password, class: "control-label input-label"
      = f.password_field :password, placeholder: t('devise.sessions.enter_password'), class: "form-control"
      = f.full_error :password, class: 'form_errors'
    .form-group.mb-30
      = f.label :password_confirmation, class: "control-label input-label"
      = f.password_field :password_confirmation, placeholder: t('devise.registrations.new.password_confirm'), class: "form-control"
      = f.full_error :password, class: 'form_errors'
    - if defined?(devise_mapping.rememberable?)
      .form-group.checkbox.text-center.mb-30
        %label.checkbox-label
          = f.check_box :remember_me, class: "checkbox-input", hidden: "true"
          %span.checkbox-icon
            %i.fa.fa-check
          %span.checkbox-text=t('devise.sessions.remember_me')
    .text-center
      = f.submit t('devise.registrations.new.registration'), class: "btn btn-default mb-20"
      %p.general-sign-text.text-center
        =t('devise.registrations.new.already_account')
        =link_to new_user_session_path do
          =t('devise.sessions.new.login')
