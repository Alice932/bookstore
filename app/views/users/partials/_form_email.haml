.col-sm-5
  %p.in-gold-500.font-18.mb-25= t('privacy.title_email')
  .general-form-md
    = simple_form_for user, as: :user, url: user_path(current_user.id), data: { turbo: false }, method: :put do |f|
      = f.hidden_field :type, value: type
      .form-group.mb-35
        = f.input :email, label: t('privacy.email'), input_html: { id: 'email_field', class: 'form-control' } , label_html: { class: 'control-label input-label' }, placeholder: t('privacy.email'), type: 'email'
      .general-text-align
        = f.button :submit, t('privacy.button_submit'), class: 'btn btn-default mb-35'
