%main.container
  #privacy.tab-pane.fade{role: "tabpanel"}
  %h1.general-title-margin= t('address.settings')
  %ul.nav.clearfix.mb-20{role: "tablist"}
    %li.tab-item.active{role: "presentation"}
      = link_to t('address.address_link'), edit_address_path(current_user.id), class: 'tab-link'
    %li.tab-item{role: "presentation"}
      = link_to t('address.privacy_link'), edit_user_path(current_user.id), class: 'tab-link'
  .tab-content
    %ul.nav.clearfix.mb-20{role: "tablist"}
      .row.mb-60
      #email_form
        = render partial: 'users/partials/form_email', locals: { user: @user_form.nil? ? current_user : @user_form, type: t('privacy.type.email') }
      #password_form
        = render partial: 'users/partials/form_password', locals: { user: @user_form.nil? ? current_user : @user_form, type: t('privacy.type.password') }
      #delete_account_form
        .col-sm-12
          %p.in-gold-500.font-18.mb-25= t('privacy..title_remove_account')
          .general-settings-btn
            = button_to t('privacy.btn_remove_account'), user_path(current_user), method: :delete, class: 'btn disabled btn-default mb-20', id: 'button_for_delete_account'
          .form-group.checkbox.general-settings-checkbox
            %label.checkbox-label
              %input.checkbox-input#remove-account{type: "checkbox", hidden: "true"}
              %span.checkbox-icon
                %i.fa.fa-check
              %span.checkbox-text= t('privacy.checkbox')
