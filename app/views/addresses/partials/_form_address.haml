= simple_form_for address, as: :address, url: address.persisted? ? address_path(current_user.id) : addresses_path, data: { turbo: false }, method: address.persisted? ? :put : :post do |f|
  = f.hidden_field :type, value: type
  .col-md-5.mb-40
    .visible-xs.visible-sm
      %h3.general-subtitle.mt-0= type
    .form-group
      =f.input :first_name, label: t('address.first_name'), placeholder: t('address.first_name'), label_html: { class: 'control-label input-label' }, input_html: { id: 'first_name_field', class: 'form-control' }, type: 'text'
    .form-group
      =f.input :last_name, label: t('address.last_name'), placeholder: t('address.last_name'), label_html: { class: 'control-label input-label' }, input_html: { id: 'last_name_field', class: 'form-control' }, type: 'text'
    .form-group
      =f.input :address, label: t('address.address'), placeholder: t('address.address'), label_html: { class: 'control-label input-label' },  input_html: { id: 'address_field', class: 'form-control' }, type: 'text'
    .form-group
      =f.input :country, label: t('address.country'), label_html: { class: 'control-label input-label' }, prompt: :translate, input_html: { id: 'country_field', class: 'form-control' }, type: 'text'
    .form-group
      =f.input :city, label: t('address.city'), placeholder: t('address.city'), label_html: { class: 'control-label input-label' },  input_html: { id: 'city_field', class: 'form-control' }, type: 'text'
    .form-group
      =f.input :zip, label: t('address.zip'), placeholder: t('address.zip'), label_html: { class: 'control-label input-label' },  input_html: { id: 'zip_field', class: 'form-control' }, type: 'text'
    .form-group.mb-60
      =f.input :phone, label: t('address.phone'), placeholder: t('address.phone'), label_html: { class: 'control-label input-label' },  input_html: { id: 'phone_field', class: 'form-control' }, type: 'tel'
    .text-center.general-text-align
      =f.button :submit, t('address.button_submit'), class: 'btn'
