%table.table.table-hover
  %tr.no-hover
    %th.col-pic.pl-0
      %span.in-grey-600= t('cart.product')
    %th.col-title
    %th.col-price
      %span.in-grey-600= t('cart.price')
    %th.col-quantity
      %span.in-grey-600= t('cart.quantity')
    %th.col-total
      %span.in-grey-600= t('cart.subtotal')
    %th.col-close
  -cart_items.each do |cart_item|
    %tr
      %td
        - if cart_item.book.book_photos.includes([:book_photos]).any?
          = image_tag cart_item.book.book_photos.first.image_url, class: 'cart-img-shadow pull-left'
        - else
          %img.cart-img-shadow.pull-left{src: "http://jonathantweedy.com/resources/thumbs/SmashingBook5ResponsiveWebDesign.jpg", alt: "design-book"}
      %td
        = link_to book_path(cart_item.book) do
          %p.title= cart_item.book.title
      %td
        %span.font-16.in-gold-500= number_to_currency(cart_item.book.price, unit: '€')
      %td
        .input-group
          = render partial: 'carts/partials/quantity', locals: { cart_item: cart_item, summary_quantity: cart_item.quantity, book_id: cart_item.book.id }
      %td
        %span.font-16.in-gold-500= number_to_currency(cart_item.decorate.subtotal_price, unit: '€')
      %td
        = button_to cart_item_path(cart_item.id), method: :delete, data: {turbo: "false"}, class: "close general-cart-close" do
          %span{'aria-hidden': "true"} &times;
