.col-sm-6.col-md-3
  .general-thumb-wrap
    .thumbnail.general-thumbnail
      - if book.book_photos.first
        = image_tag book.book_photos.first.image_url, class: 'img-shadow general-thumbnail-img'
      - else
        %img.img-shadow.general-thumbnail-img{src: "http://jonathantweedy.com/resources/thumbs/SmashingBook5ResponsiveWebDesign.jpg", alt: "design-book"}
      .thumb-hover
        .general-thumb-link-wrap
          = link_to book_path(id: book), class: 'thumb-hover-link' do
            %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
          = link_to cart_items_path(cart_item: { quantity: Constants::Cart::QUANTITY_INCREMENT, book_id: book.id }), data: {'turbo-method' => :post}, method: :post, class: 'thumb-hover-link' do
            %i.fa.fa-shopping-cart.thumb-icon{'aria-hidden': "true"}
    .mb-35
      .clearfix
        %p.pull-right.font-16.in-gold-500= number_to_currency(book.price, unit: 'â‚¬')
        %p.title.mr-55= book.title
      %span.divider-sm
      %p.lead.small= book.all_authors
