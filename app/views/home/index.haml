%body
  %main.container
    = render 'partials/carousel'
    .jumbotron.text-center.mb-0
      %h2.h1= I18n.t('home_page.welcome_msg')
      .mb-res-50
        %p= I18n.t('home_page.description')
      %button.btn.btn-default= I18n.t('home_page.get_started')
  .container
    .mb-35
      %h3= I18n.t('home_page.best_sellers')
      .row
        - @books.each do |book|
          .col-sm-6.col-md-3
            .general-thumb-wrap
              .thumbnail.general-thumbnail
                %img.img-shadow.general-thumbnail-img{src: "http://jonathantweedy.com/resources/thumbs/SmashingBook5ResponsiveWebDesign.jpg", alt: "design-book"}
                .thumb-hover
                  .general-thumb-link-wrap
                    %a.thumb-hover-link{href: "#"}
                      %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
                    %a.thumb-hover-link{href: "#"}
                      %i.fa.fa-shopping-cart.thumb-icon
            .mb-35
              .clearfix
                %p.pull-right.font-16.in-gold-500= 'â‚¬' + book.price.to_s
                %p.title.mr-55= book.title
              %span.divider-sm
              %p.lead.small= book.author.name
