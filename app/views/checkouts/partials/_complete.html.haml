.general-main-wrap
  .text-center.mb-40
    %h3.general-subtitle= t('.title')
    %p.fw-300= t('.email_notife', email: current_user.email)
  .row.mb-20
    .col-sm-6
      .visible-xs
        %p.general-order-number.mb-0= t('.order_number', number: current_cart.number)
        %p.general-address.mb-30= current_cart.created_at.strftime('%m/%d/%Y')
      = render partial: 'checkouts/partials/confirm/shipping_address', locals: { shipping_address: current_user.shipping_address, link: false }
    .col-sm-6.hidden-xs.text-right
      %p.general-order-number.mb-0= t('.order_number', number: current_cart.number)
      %p.general-address.mb-30= current_cart.created_at.strftime('%m/%d/%Y')
  = render partial: 'checkouts/partials/complete/course_item', locals: { order_items: current_cart.order_items.includes([:course]) }
  .right_cart_summary
    = render partial: 'checkouts/partials/cart_summary', locals: { current_cart: current_cart }
  .text-center
    = link_to t('.button_submit'), courses_path, class: 'btn btn-default mb-20'
